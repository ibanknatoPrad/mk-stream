doctype 5
html(lang="en")
	// MK-Wall 2013 by Thomas netAction Schmidt
	// License: Do the fuck you want!
	// Page: http://mk-stream.netaction.de/
	// Sources: https://github.com/netAction/mk-stream
	head
		meta(charset='UTF-8')
		meta(name='viewport',content='width=device-width,initial-scale=1')
		title MK-Stream
		link(rel='stylesheet',href='http://code.jquery.com/mobile/1.2.1/jquery.mobile-1.2.1.min.css')
		link(rel='stylesheet',href='/stylesheets/style.css')
		link(href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300',rel='stylesheet',type='text/css')
		script(src='http://code.jquery.com/jquery-1.9.1.min.js')
		script(src='http://code.jquery.com/mobile/1.3.1/jquery.mobile-1.3.1.min.js')
		block scripts
	body
		div(data-role='page',data-theme='c',data-content-theme='c')
			div(data-role='header',data-theme='c')
				block vars
				h1 MK-Stream - #{title}
				div(data-role='navbar')
					ul
						each menuitem in [{title:'Favoritenbilder',url:'/'},{title:'Jobs',url:'/jobs'}]
							if (menuitem.title == title)
								li
									a(class='ui-btn-active',ui-state-persist='true',href=menuitem.url) #{menuitem.title}
							else
								li
									a(href=menuitem.url) #{menuitem.title}
			div(data-role='content')
				block content
			div(data-role='footer',data-theme='c')
				h1 Powered by netAction
